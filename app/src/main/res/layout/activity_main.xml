<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="16dp">

        <TextView
            android:id="@+id/txtHistorico"
            style="@style/textText"
            android:layout_height="40dp"
            android:textColor="@color/textViewHistorico"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtOperacao"
            style="@style/textText"
            android:layout_height="100dp"
            android:textColor="@color/textViewOperacoes"
            android:textSize="28sp" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@android:color/darker_gray"
            android:paddingTop="3sp"
            android:paddingBottom="3sp"
            tools:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="303dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn7"
                        style="@style/btnValores"
                        android:onClick="pegarInstrucao"
                        android:text="7" />

                    <Button
                        android:id="@+id/btn8"
                        style="@style/btnValores"
                        android:onClick="pegarInstrucao"
                        android:text="8" />

                    <Button
                        android:id="@+id/btn9"
                        style="@style/btnValores"
                        android:onClick="pegarInstrucao"
                        android:text="9" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn4"
                        style="@style/btnValores"
                        android:onClick="pegarInstrucao"
                        android:text="4" />

                    <Button
                        android:id="@+id/btn5"
                        style="@style/btnValores"
                        android:onClick="pegarInstrucao"
                        android:text="5" />

                    <Button
                        android:id="@+id/btn6"
                        style="@style/btnValores"
                        android:onClick="pegarInstrucao"
                        android:text="6" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn1"
                        style="@style/btnValores"
                        android:onClick="pegarInstrucao"
                        android:text="1" />

                    <Button
                        android:id="@+id/btn2"
                        style="@style/btnValores"
                        android:onClick="pegarInstrucao"
                        android:text="2" />

                    <Button
                        android:id="@+id/btn3"
                        style="@style/btnValores"
                        android:onClick="pegarInstrucao"
                        android:text="3" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn0"
                        style="@style/btnValores"
                        android:onClick="pegarInstrucao"
                        android:text="0" />

                    <Button
                        android:id="@+id/btnPonto"
                        style="@style/btnValores"
                        android:onClick="pegarInstrucao"
                        android:text="." />

                    <Button
                        android:id="@+id/btnResult"
                        style="@style/btnOperacoes"
                        android:height="100dp"
                        android:onClick="calcular"
                        android:text="="
                        android:textColor="#00ff00" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btnLimpar"
                        style="@style/btnOperacoes"
                        android:onClick="limparValores"
                        android:text="C"
                        android:textColor="#ff0000" />

                    <Button
                        android:id="@+id/btnDividir"
                        style="@style/btnOperacoes"
                        android:onClick="pegarInstrucao"
                        android:text="/" />

                    <Button
                        android:id="@+id/btnMultiplicar"
                        style="@style/btnOperacoes"
                        android:onClick="pegarInstrucao"
                        android:text="*" />

                    <Button
                        android:id="@+id/btnSubtrair"
                        style="@style/btnOperacoes"
                        android:onClick="pegarInstrucao"
                        android:text="-" />

                    <Button
                        android:id="@+id/btnSomar"
                        style="@style/btnOperacoes"
                        android:onClick="pegarInstrucao"
                        android:text="+" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>